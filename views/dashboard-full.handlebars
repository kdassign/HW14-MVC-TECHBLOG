<section>
  <h2>Create New Post</h2>

 
    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-contents">Contents</label>
        <textarea name="post-contents"></textarea>
      </div>
      <div class="wrapper">
       <button type="submit" class="edit-link btn btn-success btn-lg">Create post!</button>
      </div>
    </form>

</section>


{{#if posts.length}}
<br>
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      {{> post-info post}}
      <div class="wrapper">
      <button onclick="window.location.href='/dashboard/edit/{{post.id}}'" type="submit" class="edit-link btn btn-primary btn-lg">Edit post</button>
      </div>
    {{/each}}
</section>
{{/if}}




<script src="/javascript/add-post.js"></script>